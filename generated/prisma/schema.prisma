generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            Int      @id @default(autoincrement())
  userId        String
  date          DateTime
  description   String
  type          String
  amount        Float
  isRecurring   Boolean
  intervalValue Int?
  intervalType  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
